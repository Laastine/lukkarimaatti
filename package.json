{
  "name": "lukkarimaatti",
  "description": "lukkarimaatti scheduling tool",
  "version": "1.2.0",
  "main": "app/bootstrap.js",
  "private": true,
  "dependencies": {
    "babel": "^6.3.13",
    "babelify": "^7.2.0",
    "baconjs": "^0.7.83",
    "bluebird": "^2.10.0",
    "body-parser": "^1.14.0",
    "browserify": "^11.0.1",
    "cheerio": "^0.19.0",
    "colors": "^1.1.2",
    "compression": "^1.6.0",
    "cron": "^1.0.9",
    "express": "^4.13.3",
    "forever": "^0.15.1",
    "node-sass": "^3.4.2",
    "nodemailer": "^1.4.0",
    "path": "^0.12.7",
    "pg": "^4.4.1",
    "pg-bluebird": "^1.0.8",
    "phantomjs": "^1.9.7-15",
    "ramda": "^0.17.1",
    "react": "^0.14.3",
    "react-big-calendar": "^0.9.7",
    "react-dom": "^0.14.3",
    "request": "^2.62.0",
    "uglify-js": "^2.6.1"
  },
  "devDependencies": {
    "babel-plugin-transform-object-rest-spread": "^6.3.13",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "nodemon": "^1.8.1",
    "supervisor": "^0.9.1",
    "watchify": "^3.6.1"
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "build-css": "node_modules/node-sass/bin/node-sass --output-style=compressed app/scss/style.scss --output .generated",
    "build-js": "node_modules/browserify/bin/cmd.js --entry app/client.js | node_modules/uglify-js/bin/uglifyjs --compress --mangle > .generated/bundle.js",
    "build": "npm run build-css && npm run build-js",
    "watch-css": "node_modules/node-sass/bin/node-sass -w app/scss/style.scss --output-style=compressed --output .generated",
    "watch-js": "node_modules/watchify/bin/cmd.js app/client.js --debug -o .generated/bundle.js -v",
    "watch": "npm run watch-js & npm run watch-css & node_modules/supervisor/lib/cli-wrapper.js --quiet --ignore node_modules --watch app app/bootstrap.js",
    "start": "node app/bootstrap.js",
    "start-dev": "export NODE_ENV=development; npm run watch",
    "build-tests": "(cd test && npm install)",
    "test": "mocha-phantomjs http://localhost:8080/test/runner.html"
  }
}
