<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.ltky.model.Course" table="COURSE">
        <id name="courseId" type="java.lang.Integer">
            <column name="COURSE_ID"/>
            <generator class="identity"/>
        </id>
        <property name="courseCode" type="java.lang.String">
            <column name="COURSE_CODE" length="32" not-null="true" unique="true"/>
        </property>

        <property name="courseName" type="java.lang.String">
            <column name="COURSE_NAME" length="256" not-null="true" unique="false"/>
        </property>

        <property name="period" type="java.lang.String">
            <column name="PERIOD" length="4" not-null="true" unique="false"/>
        </property>

        <property name="weekNumber" type="java.lang.String">
            <column name="WEEK" length="64" not-null="true" unique="false"/>
        </property>

        <property name="timeOfDay" type="java.lang.String">
            <column name="TIME_OF_DAY" length="32" not-null="false" unique="false"/>
        </property>

        <property name="classroom" type="java.lang.String">
            <column name="CLASSROOM" length="64" not-null="false" unique="false"/>
        </property>

        <property name="type" type="java.lang.String">
            <column name="TYPE" length="16" not-null="false" unique="false"/>
        </property>

        <property name="department" type="java.lang.String">
            <column name="DEPARTMENT" length="4" not-null="true" unique="false"/>
        </property>

    </class>
</hibernate-mapping>